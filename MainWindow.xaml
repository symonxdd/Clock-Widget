<Window x:Class="Clock_Widget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock_Widget"
        mc:Ignorable="d"
        Title="MainWindow" Height="89.335" Width="296.333"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown" Background="#02FFFFFF"
        Closing="Window_Closing" Foreground="{x:Null}"
        MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Grid Background="#7F000000">
        <Label x:Name="lblTime" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontFamily="Bariol Regular" FontSize="72"/>
        <Button x:Name="btnClose" Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="277,0,0,0" Height="19" Click="btnClose_Click" Background="#FFDD4E42" Foreground="White"/>
        <Button x:Name="btnTheme" Content="|" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="277,24,0,0" Height="19" Click="btnTheme_Click" Background="#FF429EDD" Foreground="White"/>

    </Grid>
</Window>
